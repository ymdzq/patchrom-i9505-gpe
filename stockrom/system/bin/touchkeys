#!/system/bin/sh

echo "Touch key light control"
echo
echo "Enter 1 disable touch keys"
echo "Enter 2 enable touch keys"
echo
echo "Type 1 or 2 and then press enter: (Default=0)"
read RESP
if [ "$RESP" = "2" ]; then
	echo 255 > /sys/class/leds/button-backlight/max_brightness
else
	echo 0 > /sys/class/leds/button-backlight/max_brightness
fi
echo
echo 
echo "Enjoy - Danvdh"
echo
exit
